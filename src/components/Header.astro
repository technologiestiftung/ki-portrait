---
import classes from "../utils/classes";
import Kiportraitgt from "./icons/Kiportraitgt.astro";
---

<header
  class={classes(
    "fixed top-2 left-2 rounded-full border border-border",
    "flex shadow bg-background"
  )}
>
  <a
    href="/"
    title="ZurÃ¼ck auf die Hauptseite"
    class={classes(
      "flex gap-3",
      "px-5 pt-1.5 pb-2 items-center text-xl",
      "focus-visible:outline-none focus-visible:ring-2",
      "focus-visible:ring-offset-2 focus-visible:ring-brandPink",
      "focus-visible:ring-offset-background focus-visible:ring-offset-2",
      "focus-visible:border-transparent focus-visible:rounded-full",
      "focus-visible:bg-background",
      "transition hover-hover:hover:bg-brandPink",
      "hover-hover:hover:text-white group",
      "rounded-l-full"
